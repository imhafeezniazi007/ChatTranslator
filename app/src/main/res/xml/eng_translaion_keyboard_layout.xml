        <Key android:codes="113" android:keyLabel="q" android:horizontalGap="0.75%p" android:padding="5dp" android:keyWidth="10%p"/>
        <Key android:codes="119" android:keyLabel="w" android:horizontalGap="0.5%p" android:padding="5dp" android:keyWidth="10%p"/>
        <Key android:codes="101" android:keyLabel="e" android:horizontalGap="0.5%p" android:padding="5dp" android:keyWidth="10%p"/>
        <Key android:codes="114" android:keyLabel="r" android:horizontalGap="0.5%p" android:padding="5dp" android:keyWidth="10%p"/>
