    <!-- Alphabets Row 2 -->
    <Row android:verticalGap="1.5%p">
        <Key android:codes="97" android:keyLabel="a" android:horizontalGap="1%p" android:keyWidth="11.11%p" android:padding="5dp"/>
        <Key android:codes="115" android:keyLabel="s" android:horizontalGap="1%p" android:keyWidth="11.11%p" android:padding="5dp"/>
        <Key android:codes="100" android:keyLabel="d" android:horizontalGap="1%p" android:keyWidth="11.11%p" android:padding="5dp"/>
        <Key android:codes="102" android:keyLabel="f" android:horizontalGap="1%p" android:keyWidth="11.11%p" android:padding="5dp"/>
        <Key android:codes="103" android:keyLabel="g" android:horizontalGap="1%p" android:keyWidth="11.11%p" android:padding="5dp"/>
        <Key android:codes="104" android:keyLabel="h" android:horizontalGap="1%p" android:keyWidth="11.11%p" android:padding="5dp"/>
        <Key android:codes="106" android:keyLabel="j" android:horizontalGap="1%p" android:keyWidth="11.11%p" android:padding="5dp"/>
        <Key android:codes="107" android:keyLabel="k" android:horizontalGap="1%p" android:keyWidth="11.11%p" android:padding="5dp"/>
        <Key android:codes="108" android:keyLabel="l" android:horizontalGap="1%p" android:keyWidth="11.11%p" android:padding="5dp"/>
    </Row>


    <!-- Alphabets Row 3 -->
    <Row android:verticalGap="1.5%p">
        <Key android:codes="59" android:keyIcon="@drawable/ic_caps_keyboard" android:horizontalGap="1%p" android:padding="5dp" android:keyWidth="15%p"/>
        <Key android:codes="122" android:keyLabel="z" android:horizontalGap="1%p" android:keyWidth="10%p" android:padding="5dp"/>
        <Key android:codes="120" android:keyLabel="x" android:horizontalGap="1%p" android:keyWidth="10%p" android:padding="5dp"/>
        <Key android:codes="99" android:keyLabel="c" android:horizontalGap="1%p" android:keyWidth="10%p" android:padding="5dp"/>
        <Key android:codes="118" android:keyLabel="v" android:horizontalGap="1%p" android:keyWidth="10%p" android:padding="5dp"/>
        <Key android:codes="98" android:keyLabel="b" android:horizontalGap="1%p" android:keyWidth="10%p" android:padding="5dp"/>
        <Key android:codes="110" android:keyLabel="n" android:horizontalGap="1%p" android:keyWidth="10%p" android:padding="5dp"/>
        <Key android:codes="109" android:keyLabel="m" android:horizontalGap="1%p" android:keyWidth="10%p" android:padding="5dp"/>
        <Key android:codes="-5" android:keyIcon="@drawable/ic_backspace" android:keyWidth="15%p" android:horizontalGap="1%p" android:padding="5dp" />
    </Row>


    <!-- Special Characters and Numbers Row -->
    <Row android:rowEdgeFlags="bottom" android:verticalGap="0.5%p">
        <Key android:codes="-101" android:keyLabel="123?" android:keyWidth="15%p" android:horizontalGap="0.5%p"/>
        <Key android:codes="-102" android:keyIcon="@drawable/ic_languages" android:keyWidth="10%p" android:horizontalGap="0.5%p"/>
        <Key android:codes="32" android:keyLabel="Space" android:keyWidth="40%p" android:horizontalGap="0.5%p"/>
        <Key android:codes="158" android:keyLabel="." android:keyWidth="10%p" android:horizontalGap="0.5%p"/>
        <Key android:codes="10" android:keyLabel="Done" android:keyWidth="15%p" android:horizontalGap="0.5%p"/>
        <Key android:codes="1004" android:keyIcon="@drawable/ic_btn_translate" android:keyWidth="10%p" android:horizontalGap="0.5%p" android:padding="5dp"/>
    </Row>

</Keyboard>
