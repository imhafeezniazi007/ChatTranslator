        <Key android:codes="111" android:keyLabel="o" android:horizontalGap="0.5%p" android:padding="5dp" android:keyWidth="10%p"/>
        <Key android:codes="112" android:keyLabel="p" android:horizontalGap="0.75%p" android:padding="5dp" android:keyWidth="10%p"/>
