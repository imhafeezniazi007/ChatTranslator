<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:keyWidth="10%p"
    android:horizontalGap="1%p"
    android:padding="5dp"
    android:keyHeight="50dp">


    <!-- Row 1 -->
    <Row android:verticalGap="1.5%p">
        <Key android:codes="1001" android:keyIcon="@drawable/ic_keyboard_add" android:keyWidth="33.33%p" android:horizontalGap="0%p" android:id="@+id/item1"/>
        <Key android:codes="1002" android:keyIcon="@drawable/ic_keyboard_setting" android:keyWidth="33.33%p" android:horizontalGap="0%p" android:id="@+id/item2"/>
        <Key android:codes="1003" android:keyIcon="@drawable/ic_keyboard_mic" android:keyWidth="33.33%p" android:horizontalGap="0%p" android:id="@+id/item3" />
    </Row>

    <!-- Alphabets Row 1 -->
    <Row android:verticalGap="1.5%p">
        <Key android:codes="113" android:keyLabel="q" android:keyWidth="9%p"/>
        <Key android:codes="119" android:keyLabel="w" android:keyWidth="9%p"/>
        <Key android:codes="101" android:keyLabel="e" android:keyWidth="9%p"/>
        <Key android:codes="114" android:keyLabel="r" android:keyWidth="9%p"/>
        <Key android:codes="116" android:keyLabel="t" android:keyWidth="9%p"/>
        <Key android:codes="121" android:keyLabel="y" android:keyWidth="9%p"/>
        <Key android:codes="117" android:keyLabel="u" android:keyWidth="9%p"/>
        <Key android:codes="105" android:keyLabel="i" android:keyWidth="9%p"/>
        <Key android:codes="111" android:keyLabel="o" android:keyWidth="9%p"/>
        <Key android:codes="112" android:keyLabel="p" android:keyWidth="9%p"/>
    </Row>


    <!-- Alphabets Row 2 -->
    <Row android:verticalGap="1.5%p">
        <Key android:codes="97" android:keyLabel="a"/>
        <Key android:codes="115" android:keyLabel="s"/>
        <Key android:codes="100" android:keyLabel="d"/>
        <Key android:codes="102" android:keyLabel="f"/>
        <Key android:codes="103" android:keyLabel="g"/>
        <Key android:codes="104" android:keyLabel="h"/>
        <Key android:codes="106" android:keyLabel="j"/>
        <Key android:codes="107" android:keyLabel="k"/>
        <Key android:codes="108" android:keyLabel="l"/>
    </Row>

    <!-- Alphabets Row 3 -->
    <Row android:verticalGap="1.5%p">
        <Key android:codes="59" android:keyIcon="@drawable/ic_caps_keyboard"/>
        <Key android:codes="122" android:keyLabel="z"/>
        <Key android:codes="120" android:keyLabel="x"/>
        <Key android:codes="99" android:keyLabel="c"/>
        <Key android:codes="118" android:keyLabel="v"/>
        <Key android:codes="98" android:keyLabel="b"/>
        <Key android:codes="110" android:keyLabel="n"/>
        <Key android:codes="109" android:keyLabel="m"/>
        <Key android:codes="-5" android:keyIcon="@drawable/ic_backspace"/>
    </Row>

    <!-- Special Characters and Numbers Row -->
    <Row android:rowEdgeFlags="bottom" android:verticalGap="0.5%p">
        <Key android:codes="-101" android:keyLabel="123?" android:keyWidth="12%p"/>
        <Key android:codes="-102" android:keyIcon="@drawable/ic_languages" android:keyWidth="10%p"/>
        <Key android:codes="32" android:keyLabel="Space" android:keyWidth="50%p"/>
        <Key android:codes="158" android:keyLabel="." android:keyWidth="10%p"/>
        <Key android:codes="10" android:keyLabel="Done" android:keyWidth="12%p"/>
    </Row>

</Keyboard>
