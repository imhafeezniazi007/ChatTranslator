<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    tools:context="translate.chat.translator.keyboard.iphonekeyboard.all.languages.translator.Fragments.ChatTranslatorOutput">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_background"
        android:layout_marginTop="@dimen/_8sdp">

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/ct_spinner_one"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:dropDownHeight="wrap_content"
            android:spinnerMode="dropdown"
            android:background="@drawable/item_custom_spinner"
            android:padding="@dimen/_8sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ct_btn_intercast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp"
            android:layout_margin="@dimen/_5sdp"
            android:src="@drawable/icon_ct_intercast"
            app:layout_constraintBottom_toBottomOf="@+id/ct_spinner_one"
            app:layout_constraintEnd_toStartOf="@+id/ct_spinner_two"
            app:layout_constraintStart_toEndOf="@+id/ct_spinner_one"
            app:layout_constraintTop_toTopOf="@+id/ct_spinner_one" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/ct_spinner_two"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:background="@drawable/item_custom_spinner"
            android:padding="@dimen/_8sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_ct_constraint_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/_120sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/item_main_features_background"
            app:layout_constraintEnd_toEndOf="@+id/ct_spinner_two"
            app:layout_constraintStart_toStartOf="@+id/ct_spinner_one"
            app:layout_constraintTop_toBottomOf="@+id/ct_spinner_one">

            <TextView
                android:id="@+id/ct_lan_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/item_main_features_background"
                android:gravity="top"
                android:layout_margin="@dimen/_8sdp"
                android:padding="@dimen/_8sdp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ct_text_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/btn_ct_sound"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/ct_lan_textView"
                app:layout_constraintTop_toBottomOf="@+id/ct_lan_textView" />

            <ImageView
                android:id="@+id/btn_ct_sound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/icon_ct_sound"
                app:layout_constraintBottom_toBottomOf="@+id/btn_ct_cpy"
                app:layout_constraintEnd_toStartOf="@id/btn_ct_cpy"
                app:layout_constraintTop_toTopOf="@+id/btn_ct_cpy" />

            <ImageView
                android:id="@+id/btn_ct_cpy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_ct_copy"
                android:layout_margin="@dimen/_8sdp"
                android:padding="@dimen/_8sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_ct_constraint_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/_120sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/item_main_features_background"
            app:layout_constraintEnd_toEndOf="@+id/cl_ct_constraint_one"
            app:layout_constraintStart_toStartOf="@+id/cl_ct_constraint_one"
            app:layout_constraintTop_toBottomOf="@+id/cl_ct_constraint_one">

            <TextView
                android:id="@+id/ct_lan_textView_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/item_main_features_background"
                android:gravity="top"
                android:layout_margin="@dimen/_8sdp"
                android:padding="@dimen/_8sdp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ct_text_textView_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:textColor="@color/color_primary_blue"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/btn_ct_sound_two"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/ct_lan_textView_two"
                app:layout_constraintTop_toBottomOf="@+id/ct_lan_textView_two" />

            <ImageView
                android:id="@+id/btn_ct_sound_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/icon_ct_sound"
                app:layout_constraintBottom_toBottomOf="@+id/btn_ct_share"
                app:layout_constraintEnd_toStartOf="@+id/btn_ct_share"
                app:layout_constraintTop_toTopOf="@+id/btn_ct_share" />

            <ImageView
                android:id="@+id/btn_ct_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:padding="@dimen/_8sdp"
                android:src="@drawable/icon_ct_share"
                app:layout_constraintBottom_toBottomOf="@id/btn_ct_cpy_two"
                app:layout_constraintEnd_toStartOf="@id/btn_ct_cpy_two"
                app:layout_constraintTop_toTopOf="@+id/btn_ct_cpy_two" />

            <ImageView
                android:id="@+id/btn_ct_cpy_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_ct_copy"
                android:layout_margin="@dimen/_8sdp"
                android:padding="@dimen/_8sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_ct_new_translation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_translation"
            android:layout_marginTop="@dimen/_8sdp"
            android:backgroundTint="@color/color_primary_blue"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/cl_ct_constraint_two"
            app:layout_constraintTop_toBottomOf="@+id/cl_ct_constraint_two" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>